/**index.wxss**/
.weather-wrapper{
  position: relative;
  padding-top: 20rpx;
  padding-bottom: 250rpx;
  box-sizing: border-box;
}
.location-wrapper{
  font-size: 30rpx;
  line-height: 42rpx;
  margin-bottom: 60rpx;
   opacity: 0.5
}
.location{
  display: flex;
  justify-content: center;
  align-items: center;

}
.location-icon{
  margin-right: 10rpx;
  width: 21rpx;
  height: 30rpx
}
.location-text{
  text-align: center;
  margin-top: 10rpx;
 height: 42rpx;
}
.temp{
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
  text-align: center
}
.weather{
  font-size: 40rpx;
  line-height: 56rpx;
  text-align: center;
  opacity: 0.65
}
.weather-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
  background: moccasin;
}
.timetips{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
  margin-bottom: 45rpx;
}
.icon{
  width: 36rpx;
  height: 28rpx;
  margin-right: 10rpx;
}
.timetips-text{
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5
}
.day-weather{
    position: absolute;
    bottom: 0;
    left: 40rpx;
    right: 40rpx;
    display: flex;
    align-items: center;
    height: 90rpx;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    font-size: 30rpx;
    line-height: 42rpx;
    opacity: 0.5;
}
.temptext{
    flex: 1;
    padding-right: 30rpx;
    text-align: right;
}
.arrow-icon{
    width: 13rpx;
    height: 24rpx;
}
.wapper{
  display: flex;
}
 .ct{
  display: flex;
  flex-direction: column;
  width: 120rpx;
  flex-shrink: 0;
  align-items: center;
} 
.ct-time{
  font-size: 30rpx;
  line-height: 42rpx;
}
.ct-weather{
  margin-top: 50rpx;
  width: 60rpx;
  height: 60rpx;
}
.ct-temp{
  margin-top: 46rpx;
  font-size: 40rpx;
  line-height: 56rpx;
}
